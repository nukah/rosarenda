

/** GENERAL **/
body {
	background: #b84c49 url("<%= asset_path 'bg.jpg' %>") no-repeat top center;
	font: 1em "Lucida Grande", Lucida, Verdana, sans-serif;
	color: #545454; }

h1 { color: #8a2721;
     font-size: 155%;
     padding-left: 5px;
     font-weight: bold;
     text-shadow: 0px 1px 0px #ffffff;
     }
div.object_wrapper {
    padding-top: 5px;
}
dt.object {
    font-size: 16px;
    color: #B84C49;
    font-weight: bold;
    display: inline;
}

dt.object:after {
    content: ':';
}
dd.object {
    display: inline;
    text-shadow: 0px 1px 1px white;
}

#wrapper {
	width: 960px;
	margin: 0 auto; }

#header {
	width: 100%;
	height: 70px;
	overflow: hidden;
	display: block;
	clear: both; }

#box_top {
	background: url("<%= asset_path 'bg_sprite.png'%>") no-repeat top left;
	height: 22px;
	width: 960px;
	display: block;
	margin: 0 auto; }

#box {
	background: url("<%= asset_path 'bg_sprite.png'%>") repeat-y top right;
	width: 920px;
	display: block;
	margin: 0 auto;
	padding: 20px;
	padding-top: 0px; }

#box_bottom {
	background: url("<%= asset_path 'bg_sprite.png'%>") no-repeat bottom left;
	height: 22px;
	width: 960px;
	display: block;
	margin: 0 auto; }

#box_shadow {
	background: url("<%= asset_path 'shadow_bg.png' %>") no-repeat bottom center;
	height: 101px;
	width: 960px;
	display: block;
	margin: 0 auto; }

	#box_shadow	p {
		float: left;
		font-size: 0.7em;
		text-shadow: none;
		padding-left: 20px;
		line-height: 2em;
		display: block; }

	#box_shadow	a {
		color:#571F04;
		text-decoration:none; }

.cleared_bot {
	clear: both;
	height: 10px; }

#logo {
	position: relative;
	margin-bottom: 30px;
	line-height: 20px;
	font-size: 24px;
	color: #995854;
}

#logo a {
	line-height: 20px;
	font-size: 24px;
	color: #8a2721;
	margin-left: 10px;
}

#navigation {
	list-style: none;
	float: left;
	width: 960px;
	margin-bottom: 30px;
	padding-left: 40px; }

	#navigation li {
		display: inline;
		list-style: none;
		height: 30px;
		margin: 0 30px 0 10px;
		float: left; }

		#navigation li a {
			color: #1e1e1e;
			text-decoration: none;
			display: block;
			height: 100%;
			line-height: 30px;
			font-size: 24px; }

			#navigation li a:hover {
				color: #8a2721;
				text-decoration: underline; }

			#navigation li a.selected { color: #8a2721; }

#slider {
	width: 820px;
	height: 400px;
	margin: 0 auto;
	margin-top: 30px;
	background: url("<%= asset_path 'shadow_slider.png' %>") no-repeat bottom center; }

.content {
	width: 900px;
	margin-bottom: 20px;
	float: right;
}
.right {
	clear: both;
	margin-left: 15px;
}

.tiers {
	float: left;
	width: 253px;
	padding: 10px; }

.deux {
	margin-top: 50px;
    width: 320px;
    z-index: 5;
	padding: 10px;
	padding-top: 20px;
	background: url("<%= asset_path 'bg_deux.png' %>") no-repeat top left; }

p {
	text-shadow: 0px 1px 1px white;
	line-height: 2em;
	display: block; }

.read_more {
	float: right;
	font-size: 0.7em;
	color: #8a2721;
	text-decoration: none;
	margin-top: 10px; }

	.read_more:hover {
		color: #CA3831;
		text-decoration: underline; }

.blockquote {
	border-left: 2px solid #8a2721;
	margin: 10px 0 0 10px;
	padding-left: 10px;
	font-style: italic; }

.sep1 {
	width: 60px;
	height: 62px;
	display: block;
	background: url("<%= asset_path 'sep1.png' %>") no-repeat bottom left;
	position: absolute;
	left: -66px;
	top: 35px; }

.sep2 {
	width: 60px;
	height: 62px;
	display: block;
	background: url("<%= asset_path 'sep2.png' %>") no-repeat bottom left;
	position: absolute;
	left: -66px;
	top: 35px; }

.sep3 {
	width: 60px;
	height: 62px;
	display: block;
	background: url("<%= asset_path 'sep3.png' %>") no-repeat bottom left;
	position: absolute;
	left: -66px;
	top: 35px; }

ul.gallery {
	width: 820px;
	list-style: none;
	margin: 0;
	padding: 0;
	float: left;
	position: relative;
	margin-bottom: 60px; }

	ul.gallery li {
		float: left;
		margin: 10px 20px 10px 0px;
		padding: 0;
		text-align: center;
		display: inline; /*--Gimp Fix aka IE6 Fix - Fixes double margin bug--*/
		width: 150px;
		height: 100px;
		background: white;
		border: 1px solid #ccc;
		padding: 5px;
		-moz-border-radius: 3px;
		-khtml-border-radius: 3px;
		-webkit-border-radius: 3px; }

		ul.gallery li a.thumb {
			width: 150px;
			height: 100px;
			cursor: pointer;
			display: block; }

		ul.gallery li span {
		    padding-top: 10px;
			width: 150px;
			overflow: hidden;
			display: block; }


		ul.gallery li a {
			text-decoration: none;
			color: #777;
			display: block; }

.services_table {
	width: 700px;
	float: left; }

	.services_table td {
		width: 300px;
		vertical-align: top;
		padding: 5px;
		padding-bottom: 20px; }

		.services_table td.ico {
			width: 50px;
			vertical-align: middle;
			text-align: right; }

	.services_table p {
		border-left: 1px solid #8a2721;
		padding-left: 10px; }

	.services_table h3 {
		border-left: 1px solid #8a2721;
		padding-left: 10px; }

/** CONTACT FROM **/
#contact_form_holder {
	float: left;
	width: 500px; }

	#contact_form_holder h3 {
		float: left;
		width: 150px;
		padding: 6px; }

	#contact_form_holder p { clear: both; }

	#contact_form_holder input, #contact_form_holder select {
		float: left;
		width: 250px;
		padding: 5px;
		border: 1px solid #D2D8DB; }

	#contact_form_holder textarea {
		width: 410px;
		padding: 5px;
		border: 1px solid #D2D8DB;
		height: 100px; }

#send_message {
	width: 100px !important;
	cursor: pointer; }

	#send_message:hover { background-color: white !important; }

#cf_submit_p { text-align: right; }

#contact_form_holder input.error,  #contact_form_holder textarea.error {
	border: 1px solid #E7B59C;
	background: #F0D0C1; }

.success {
	display: none;
	padding: 10px;
	color: #044406;
	font-size: 12px;
	width: 300px; }

.liste_contact {
	font-size: 0.7em;
	line-height: 2em;
	clear: both;
	list-style-type: none;
	padding-left: 40px; }

	.liste_contact img {
		padding: 5px;
		background: white;
		border: 1px solid #ccc; }
.object_left {
	float: left;
	width: 460px;
}
.object_left h1 {
	padding-bottom: 15px;
	padding-right: 5px;
	font-size: 165%;
}
.object_right {
	float: right;
}
.object_right h1 {
	font-size: 115%;
	color: #8a2721;
	padding-bottom: 15px;
}
.object_right .rentcost {
    color: #8a2721;
    font-size: 14px;
    margin-bottom: 20px;
    margin-left: 10px;
}
.object_right .rentcost span {
    font-size: 2em;
    letter-spacing: 1px;
    color: #4365BF;
    font-weight: bold;
    border-bottom: 1px dotted #4365BF;
}
.object_right #map {
	width: 300px;
	height: 300px;
	margin-bottom: 20px;
	background-color: white;
	padding: 2px;
	border: 2px solid #8a2721;
}

#errorExplanation {
    background: none repeat scroll 0 0 #FFD2C7;
    border-top: 3px solid #F27F7F;
    padding: 10px;
}
#overview {
	z-index: -5;
	left: 40px;
	width: 100%;
	background-color: #ffffff;
	height: 120px;

}